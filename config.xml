<?xml version='1.0' encoding='utf-8'?>
<widget id="com.inzone.com.mx" version="2.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Inzone</name>
    <description>
        Red de negocios
    </description>
    <author email="bernagaufo@hotmail.com" href="https://facebook.com/villbercreativo">
        Villber Guadalajara
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="*://*.googleapis.com/*" subdomains="true" />
    <access origin="*://*.inzone.com.mx/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="*://*.google.com/*" subdomains="true" />
    <access origin="*://*.googleusercontent.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="http://google.com" />
    <access origin="https://google.com" />
    <access origin="https://*.google.com" />
    <access launch-external="yes" origin="tel:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" launch-external="yes" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="28"/>
        <preference name="android-targetSdkVersion" value="28" />
        <allow-intent href="market:*" />
        <preference name="SplashScreen" value="www/res/screen/android/screen-ldpi-portrait.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="SplashScreenWidth" value="258" />
        <preference name="SplashScreenHeight" value="378" />
        <preference name="SplashScreenBackgroundColor" value="#ffffff" />
        <feature name="SocialSharing">
            <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
        </feature>
        <icon src="www/res/icon/android/inzone-app-72.png" />
        <icon density="ldpi" src="www/res/icon/android/inzone-app-36.png" />
        <icon density="mdpi" src="www/res/icon/android/inzone-app-48.png" />
        <icon density="hdpi" src="www/res/icon/android/inzone-app-72.png" />
        <icon density="xhdpi" src="www/res/icon/android/inzone-app-96.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="57" src="res/ios/icon.png" width="57" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="29" src="res/ios/icon-small.png" width="29" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <feature name="SocialSharing">
            <param name="ios-package" value="SocialSharing" />
            <preference name="Orientation" value="portrait" />
        </feature>
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <splash src="www/res/screen/android/screen-ldpi-portrait.png" />
    <plugin name="cordova-plugin-geolocation" spec="2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="" />
    </plugin>
    <plugin name="cordova-plugin-googlemaps" spec="2.5.0">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyAlFoalCCJDTtxgxmZkKn6RZ0duAgqg3EA" />
        <variable name="API_KEY_FOR_IOS" value="AIzaSyAeOZQDoS_TvBJj1cDIXJ_ocRStPrupVMg" />
        <variable name="PLAY_SERVICES_VERSION" value="15.0.1" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.1.1" />
    </plugin>
    <plugin name="cordova-plugin-network-information" spec="1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-x-socialsharing" spec="5.4.4" />
</widget>
